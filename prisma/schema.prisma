generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgcrypto]
  connectionLimit = 20
}

model Player {
  id                  String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid  
  name                String   @unique
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  totalFlareSkillSp   Int      @default(0)
  totalFlareSkillDp   Int      @default(0)
  
  scores            PlayerScore[]
  skillHistory      PlayerSkillHistory[]
}

model PlayerSkillHistory {
  id                Int      @id @default(autoincrement())
  playerId          String   @db.Uuid
  totalFlareSkillSp Int
  totalFlareSkillDp Int
  recordedAt        DateTime @default(now())

  player Player @relation(fields: [playerId], references: [id])

  @@index([playerId, recordedAt])
}

model PlayerScore {
  id         Int    @id @default(autoincrement())
  playerId   String @db.Uuid
  songId     Int
  chartType  String
  score      Int
  flareRank  String
  flareSkill Int

  player Player @relation(fields: [playerId], references: [id])
  song   Song   @relation(fields: [songId], references: [id])

  @@unique([playerId, songId, chartType])
}

model Song {
  id       Int           @id @default(autoincrement())
  title    String
  version  String
  beSp     Int           @default(0)
  bSp      Int           @default(0)
  dSp      Int           @default(0)
  eSp      Int           @default(0)
  cSp      Int           @default(0)
  bDp      Int           @default(0)
  dDp      Int           @default(0)
  eDp      Int           @default(0)
  cDp      Int           @default(0)

  scores   PlayerScore[]
  rankings Ranking[]
}

model Ranking {
  id                Int    @id @default(autoincrement())
  songId            Int
  grade             String
  category          String
  chartType         String
  spdp              String
  flareRank         String @default("0")
  overallPercentage Float

  song Song @relation(fields: [songId], references: [id])

  @@unique([songId, grade, category, chartType, spdp, flareRank])
}

model GimmickAndNotes {
  id                Int @id @default(autoincrement())
  songId            Int
  chartType         String
  hasSoflan         Boolean
  hasStop           Boolean
  hasShockArrow     Boolean
  notes             Int
  freeze            Int
  shockArrow        Int
}

model SystemSetting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}
